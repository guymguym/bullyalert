<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>WorkerServlet</servlet-name>
        <servlet-class>me.bullyalert.servlets.WorkerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubscribeServlet</servlet-name>
        <servlet-class>me.bullyalert.servlets.SubscribeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UnsubscribeServlet</servlet-name>
        <servlet-class>me.bullyalert.servlets.UnsubscribeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WorkerServlet</servlet-name>
        <url-pattern>/action/worker</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubscribeServlet</servlet-name>
        <url-pattern>/action/subscribe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnsubscribeServlet</servlet-name>
        <url-pattern>/action/unsubscribe</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
